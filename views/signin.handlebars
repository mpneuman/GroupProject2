<body>
    <div class='pure-g'>
        <p class='pure-u-1-5 pure-u-md-2-5'></p>
        <div class='pure-u-4-5 pure-u-md-3-5'>
        <div class="loginbox">
            <img class="bill">
            <h1>Log In Here</h1>
            <form id="signin" name="signin" method="post" action="/signin" autocomplete="off">
                <label for="email">Username</label>
                <br> {{#if message}}
                <h1>{{message}}</h1>
                {{/if}}
                <input class="text" name="email" type="text" />
                <br>
                <label for="password">Password</label>
                <br>
                <input name="password" type="password" />
                <br>
                <input class="pure-button" type="submit" value="Sign In" />
                <br>
                <br>
            </form>
            <span>New User?</span>
            <div id="signUp">
                <a href='/signup'>
                    <button class="pure-button">
                        <i class="fas fa-user-plus"></i>
                        Sign Up
                    </button>
                </a>
                <br>
            </div>



        </div>
        </div>
    </div>

</body>