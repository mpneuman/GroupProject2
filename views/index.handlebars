<div id="back">


    <div id="mainSection">
        <header>
            <h1 class='intro'>Hello {{dataValues.firstname}} {{dataValues.lastname}}!
                <br> Welcome to Billify</h1>
        </header>
        <section id="lists">
            <div id="bills">
                <h2>Here is a list of your bills</h2>
                <div id="billList">
                    <div id="dynamicBills">

                    </div>
                </div>
            </div>
            <br>
        </section>
        <br>
        <div id='new'>
            <div class='pure-g'>
                <p class='pure-u-0 pure-u-md-1-8'></p>
<div class='pure-u-1 pure-u-md-1-4'>
                <div id="addBill">
                            
                    <form id="newBill" name="newBill" method="post" action="/newBill" autocomplete="off"  onsubmit="return validateForm()">
                    <h4>Add a new bill</h4>
                        <label for="payee">Who are you paying?</label>
                        <br>
                        <input class="text" name="payee" type="text" pattern="[/<[^>]*>/g]+" title="Invalid input" />
                        <br>
                        <label for="amountDue" id='payLabel'>How much are you paying? (Required)</label>
                        <br>
                        <input class="text" name="amountDue" type="text" />
                        <br>
                        <label for="category">What category is this bill?</label>
                        <br>
                        <select name="category" class='category'>
                            <option value="Housing">Housing Costs</option>

                            <option value="OtherUlt">Utilities</option>


                            <option value="Car">Car Costs</option>

                            <option value="HealthIns">Health Insurance</option>
                            <option value="Credit">Credit Cards</option>

                            <option value="Entertainment">Entertainment</option>

                            <option value="Other">Other</option>



                        </select>

                        <br> {{!--
                        <input name="category" list="category" /> --}}
                        <br>
                        <label for="dateDue" id='dateLabel'>What day of the month is this bill due? (Required)</label>
                        {{!-- Will try to add calander --}}
                        <br>
                        <input class="text" name="dateDue" type="text" />
                        <br>
                        <label for="websiteAccess">Do you have a link to your bill?
                            <br> Paste it here for reference!</label>
                        <br>
                        <input class="text" name="websiteAccess" type="text" />
                        <br>
                        <label for="notes">Do you have any notes for this bill?</label>
                        <br>
                        <input class="text" name="notes" type="text" />
                        <br>
                        <input type='hidden' value={{{dataValues.id}}} name="UserId" />

                        <button class="pure-button" "addBillBtn" type="submit">

                            Add A Bill
                            <i class="fas fa-dollar-sign"></i>
                        </button>

                    </form>
                </div>
                </div>
                <br>
                <p class='pure-u-0 pure-u-md-1-8'></p>
                <div class='pure-u-1 pure-u-md-1-3'>
                <section id="graphs">
                    {{!-- <div id="billsGraph" class='clearfix'> --}}
                        <div>
                            <h4 id='graphTitle'>What your bills look like</h4>
                        
                        {{!-- bill graph will go here --}}
                        <canvas id="myChart" width="300" height="300"></canvas>
                        </div>
                    </div>

                </section>
                </div>
            </div>

        </div>
    </div>
    <div id="logout">
        <a href='/logout'>
            <button>Log Out</button>
        </a>
    </div>
</div>


<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment-with-locales.js"></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/moment-recur/1.0.7/moment-recur.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js'></script>


<script src="/js/bills.js" type="text/javascript"></script>